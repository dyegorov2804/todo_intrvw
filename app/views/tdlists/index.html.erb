<p id="notice"><%= notice %></p>

<h1>Tdlists</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tdlists.each do |tdlist| %>
      <tr>
        <td><%= tdlist.description %></td>
        <td><%= tdlist.completed %></td>
        <td><%= link_to 'Show', tdlist %></td>
        <td><%= link_to 'Edit', edit_tdlist_path(tdlist) %></td>
        <td><%= link_to 'Change Status', change_status_path(id: tdlist.id), method: :patch %></td>
        <td><%= link_to 'Destroy', tdlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tdlist', new_tdlist_path %>
